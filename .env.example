# Docker Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to git!

# ============================================
# Database (MariaDB)
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_PASSWORD=your_secure_mysql_password

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=your_secure_redis_password

# ============================================
# JWT Authentication
# ============================================
# Must be at least 256 bits (32+ characters) for security
JWT_SECRET=your-jwt-secret-key-min-256-bits-change-this

# ============================================
# Spring Profile
# ============================================
SPRING_PROFILES_ACTIVE=prod

# ============================================
# External APIs (Optional)
# ============================================
# Gold/Silver price API from goldapi.io
GOLD_API_KEY=your_goldapi_key_here
SILVER_API_KEY=your_silverapi_key_here

# ============================================
# Local Development (Optional)
# ============================================
# DB_URL=jdbc:mariadb://localhost:3307/myplatform
# DB_USERNAME=myplatform
# DB_PASSWORD=your_password
